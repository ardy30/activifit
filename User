	//Register a student
	public void register(String name, int age, int weight, int height, int actId, String email){
		this.name = name;
		this.age = age;
		this.weight = weight;
		this.height = height;
		this.actId = actId;
		this.email = email;
	}
	
	public void deleteUser(){
		
	}
	
	public boolean checkUser(){
		return false;
	}
	
	public User findUser(User findMe){
		return null;
	}
	
	//Sanitize inputs?? -> check here or check at action? <-
	public boolean sanitizeAge(int age){
		//Returns true for a valid input of age
		if(age<99 || age>0) return false;
		return true;
	}
	
	public boolean sanitizeWeight(int weight){
		//lbs to keep it as int
		if(weight<450 || weight>8) return false;
		return true;
	}
	
	public boolean sanitizeHeight(int height){
		//cm to keep it as an int
		if(height<220 || height>50) return false;
		return true;
	}
